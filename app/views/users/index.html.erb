<div class="menup">
    <ul>
        <li><a href="features"><span>Backlog</span></a></li>
      <% Sprint.all(:order => "start DESC").each do |sprint| %>
        <li><%= link_to content_tag(:span, sprint.name), :controller => "tasks", :action => "index", :sprint_id => sprint.id %></li>
      <% end %>
        <li class="current"><a href="#"><span>Configuration</span></a></li>
    </ul>
</div>
<div class="menup">
    <ul>
        <li><a href="sprints"><span>Sprints</span></a></li>
        <li class="current"><a href="#"><span>Users</span></a></li>
        <li><a href="locations"><span>Locations</span></a></li>
        <li><a href="projects"><span>Projects</span></a></li>

    </ul>
</div>
<div style="clear:both"></div>

<div id="conf-list">
  <h1>Users</h1>

  <p id="notice" ><%= notice %></p>

  <table>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Rol</th>
      <th>Location</th>
      <th>e-mail</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @users.each do |user| %>
    <tr class="<%= cycle('list-line-odd','list-line-even') %>">
      <td><%= user.login %></td>
      <td><%= user.name %></td>
      <td><%= user.surname %></td>
      <td><%= user.rol %></td>
      <td><%= user.location.nil? ? 'No location' : user.location.name %></td>
      <td><%= user.email %></td>
      <td><%= eye_tag "View user details", {:id => user} %></td>
      <td><%= pencil_tag "Edit user", {:id => user}%></td>
      <td><%= delete_tag "Delete user", user %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= new_tag 'New User' %>
</div>
